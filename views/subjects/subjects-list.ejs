<%- include("../includes/head.ejs") %>
<%- include("../includes/navigation.ejs") %>
<div class="container">
    <br><br>
    <h2 class="new-title" style="text-align:center">Danh sách môn học</h2>
    <div class="col-md-12 text-center"> 
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Thêm môn học</button>
    </div>
    <br><br>

    <!-- connect -->
    <div class="modal" id="myModal">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" style="text-align:center"> Thêm môn học mới</h4>
                    <button type="button" class="close" data-dismiss="modal">x</button>
                </div>
                <div class="modal-body">
                    <form method="post">
                        <div class="form-group">
                            <h5>Tên môn học</h5>
                            <input type="text" name="name" class="form-control"><br>
                            <h5>Số tín chỉ</h5>
                            <input type="text" name="noc" class="form-control"><br>
                            <h5>Phần trăm điểm danh</h5>
                            <input type="text" name="pod" class="form-control"><br>
                            <h5>Phần trăm kiểm tra</h5>
                            <input type="text" name="pot" class="form-control"><br>
                            <h5>Phần trăm bài tập</h5>
                            <input type="text" name="poe"class="form-control"><br>
                            <h5>Phần trăm thực hành</h5>
                            <input type="text" name="pop" class="form-control"><br>
                            <h5>Phần trăm cuối kì</h5>
                            <input type="text" name="pofe" class="form-control"><br>
                        </div>
                        <button name="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped alignmiddle">
        <thead>
            <tr class="student">
                <th>STT </th>
                <th>Tên môn học</th>
                <th>Số tín chỉ</th>
                <th>Phần trăm điểm danh</th>
                <th>Phần trăm kiểm tra </th>
                <th>Phần trăm bài tập</th>
                <th>Phần trăm thực hành</th>
                <th>Phần trăm cuối kì</th>
                <th></th>
                <th></th>
            </tr>
            <tbody id="myTable">
                <% if(subjectsList.length > 0) {
                    for(i = 0; i < subjectsList.length; i++){  %>
                        <tr>
                            <td></td>
                            <td><%= subjectsList[i].name %></td>
                            <td><%= subjectsList[i].noc %></td>
                            <td><%= subjectsList[i].pod %></td>
                            <td><%= subjectsList[i].pot %></td>
                            <td><%= subjectsList[i].poe %></td>
                            <td><%= subjectsList[i].pop %></td>
                            <td><%= subjectsList[i].pofe %></td>
                            <td></td>
                            <td></td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </thead>
        <tbody id="myTable">
          
        </tbody>
    </table>
    <a href="exportExcel.php" class="fas fa-cloud-download-alt">Tải xuống</span></a>
</div>
<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
</script>
