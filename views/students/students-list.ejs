    <table class="table table-striped alignmiddle">
        <thead>
            <tr class="student">
                <th>STT </th>
                <th>Họ và tên </th>
                <th>Ngày sinh</th>
                <th>Nơi sinh</th>
                <th></th>
                <th></th>
            </tr>
            <tbody id="myTable">
                
                <% if(studentsList.length > 0) {
                    for(i = 0; i < studentsList.length; i++){  %>
                        <tr>
                            <td></td>
                            <td><%= studentsList[i].fullname %></td>
                            <td><%= studentsList[i].dob %></td>
                            <td><%= studentsList[i].pob %></td>
                            <td><%= studentsList[i].gender %></td>
                            <td>
                                <form action="/studentView" method="POST">
                                    <button name="viewStudent"  id="<%=studentsList[i].username%>" value="<%=studentsList[i].username%>" class="btn btn-info"   data-toggle="modal" data-target="#myModal">Xem</button>
                                </form>
                            </td>
                            <!-- <td><a href='deleteStudent.php?username="<?php echo $dong['username'] ?>"' class="btn btn-danger">Xóa</a></td> -->
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </thead>
        <tbody id="myTable">
          
        </tbody>
    </table>
    <a href="exportExcel.php" class="fas fa-cloud-download-alt">Tải xuống</span></a>
</div>
<script>
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
</script>
